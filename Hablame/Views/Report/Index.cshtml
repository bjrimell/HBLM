@model Hablame.Services.Viewmodels.ConversationReportViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-3 sidenav hidden-xs">
            <h2>Hablame Conversation Report</h2>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="#section1">Summary</a></li>
                <li><a href="#section2">Mistakes</a></li>
                <li><a href="#section3">Praise</a></li>
                <li><a href="#section3">Comparison</a></li>
            </ul><br>
        </div>
        <br>

        <div class="col-sm-9">
            <div class="well">
                <h4>Summary</h4>
                <p>@Model.Conversation.Language language conversation report for @Model.Conversation.StudentForename @Model.Conversation.StudentSurname on @Model.Conversation.StartDateTime</p>
                <p>Graded by @Model.Conversation.TeacherForename @Model.Conversation.TeacherSurname.</p>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="well">
                        <h4>Total Praise</h4>
                        <p>@Model.MistakeList.Count()</p>
                        <button type="button" class="btn btn-primary btn-sm">View All</button>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="well">
                        <h4>New Praise</h4>
                        <p>13</p>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="well">
                        <h4>Praise Per Minute</h4>
                        <p>10 Million</p>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="well">
                        <h4>Some stat:</h4>
                        <p>Grammar: 12</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    <div class="well">
                        <h4>Total Mistakes</h4>
                        <p>@Model.MistakeList.Count()</p>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="well">
                        <h4>New Mistakes</h4>
                        <p>13</p>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="well">
                        <h4>Mistakes Per Minute</h4>
                        <p>10 Million</p>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="well">
                        <h4>Some stat</h4>
                        <p>Grammar: 12</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="well">
                        <h4>Top 5 Praise</h4>
                        <p>Text</p>
                        <p>Text</p>
                        <p>Text</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="well">
                        <h4>Top 5 Mistakes</h4>
                        <p>Text</p>
                        <p>Text</p>
                        <p>Text</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="well">
                        <h4>Types Breakdown</h4>
                        <p>Grammar: 12 mistakes, 24 praise</p>
                        <p>Vocab: 1 mistake, 9 praise</p>
                        <p>Pronunciation: 33 mistakes, 0 praise</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8">
                    <div class="well">
                        <p>Text</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="well">
                        <p>Text</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>