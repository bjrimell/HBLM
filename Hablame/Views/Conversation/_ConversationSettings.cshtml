@model Hablame.Services.Viewmodels.ConversationSettingsViewModel

<!-- Conversation Settings Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Conversation Settings</h4>
            </div>
            <div class="modal-body">
                <p>This is a large modal.</p>
                <div id="accordionSection" class="row content">
                    <div class="col-lg-12">
                        <div class="panel-group" id="accordion">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">Mistake Type Options</a>
                                    </h4>
                                </div>
                                <div id="collapse1" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        <p>You can display a maximum of nine feedback types for each feedback rating. All categories belong to one or more of the following three types:</p>
                                        <ul>
                                            <li>Vocabulary</li>
                                            <li>Grammar</li>
                                            <li>Pronunciation</li>
                                        </ul>

                                        <p>Select the Mistake Type Configuration that you would like to use for this conversation:</p>

                                        @{
                                            foreach (var mistakeTypeConfig in Model.ConversationConfiguration.MistakeTypeOptions)
                                            { 
                                                var checkedValue = mistakeTypeConfig.Enabled ? new { @checked = "checked" } : null;
                                                
                                                <div class="radio">
                                                    <label>
                                                    <input type="radio" name="optradio" checked=@checkedValue value="@mistakeTypeConfig.MistakeTypeOptionsConfig.Id">@mistakeTypeConfig.MistakeTypeOptionsConfig.Name</label>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">Collapsible Group 2</a>
                                    </h4>
                                </div>
                                <div id="collapse2" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                                        sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                                        quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">Collapsible Group 3</a>
                                    </h4>
                                </div>
                                <div id="collapse3" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                                        sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                                        quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
